<div class="container">
  <div class="row">
    <div class="col-4">
      <%= profile_picture @account, 200 %>
    </div>
    <div class="col-8 text-left">
      <div class="row">
        <div class="col-6">
          <h1><%= @account.full_name %></h1>
        </div>
        <div class="col-6">
          <%= link_to "Edit Profile", edit_account_registration_path, 
            class: "btn btn-outline-secondary" if can_edit_profile?(@account.id) %>
        </div>
      </div>
     

      <div class="row profile-stats">
        <div class="col-4">
         <%= @account.posts.count %> posts
        </div>
        <div class="col-4">
          <%= @account.total_followers %> followers
        </div>
         <div class="col-4">
          <%= @account.total_following %> following
        </div>
      </div>
      <p><%= @account.full_name %></p>
      <%= simple_format @account.description %>
      <p><%= link_to @account.website if @account.website.present? %></p>
    </div>
  </div>

  <div class="row mt-3">
    <% @posts.each do |post| %>
      <% if post.image_url %>
        <div class="col-4 mb-3">
          <div class="insta-post post-square" style="background: url(<%= post.image.url %>) no-repeat center top">
            <%= link_to post_path(post) do %>
              <div class="post-stats">
                <div class="inner">
                  <i class="fa fa-heart"></i><%= post.total_likes_count %>
                  <i class="fa fa-comments ml-3"></i><%= post.total_comments_count %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
