<%= form_for(@post) do |f| %>
  <div class="form-group">
     <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="form-group mt-3">
    <%= f.label :decription %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="field mt-3">
    <%= f.submit "Post", class: "btn btn-success" %>
  </div>
<% end %>
